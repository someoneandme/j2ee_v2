<toolbox>
	<xhtml>true</xhtml>
	<tool>
	    <key>myvm</key>
	    <scope>application</scope>
	    <class>spring_mvc3.web.vm_toolbox.MyVmTool</class> <!-- 我自己写的工具类 -->
	</tool>
	<tool>
		<key>date</key>
		<scope>application</scope>
		<class>org.apache.velocity.tools.generic.DateTool</class>
		<parameter name="format" value="yyyy-MM-dd" />
	</tool>
	<tool>
		<key>number</key>
		<scope>application</scope>
		<class>org.apache.velocity.tools.generic.NumberTool</class>
	</tool>
	<tool>
		<key>esc</key>
		<scope>application</scope>
		<class>org.apache.velocity.tools.generic.EscapeTool</class> <!-- velocity的页面转义工具 -->
	</tool>
	<tool>
		<key>display</key>
		<scope>application</scope>
		<class>org.apache.velocity.tools.generic.DisplayTool</class>
	</tool>
	<tool>
		<key>render</key>
		<scope>application</scope>
		<class>org.apache.velocity.tools.generic.RenderTool</class>
	</tool>
	<tool>
		<key>math</key>
		<scope>application</scope>
		<class>org.apache.velocity.tools.generic.MathTool</class>
	</tool>
	<tool>
		<key>sort</key>
		<scope>application</scope>
		<class>org.apache.velocity.tools.generic.SortTool</class>
	</tool>
</toolbox>